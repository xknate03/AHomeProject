<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragmentHome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:theme="@style/ToolbarColoredBackArrow"
        app:titleMarginStart="40dp">

        <EditText
            android:id="@+id/edtSearchBar_home_fragment"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittextformat"
            android:hint="Search here"
            android:padding="7dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/ic_paw"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_chat"
           />



    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragmentHome_toolbar"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_fragment_notif"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>



</RelativeLayout>